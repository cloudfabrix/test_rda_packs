{
    "name": "customer_discovery",
    "label": "On Demand Discovery",
    "description": "onboarded_devices: Insights",
    "dashboard_folder": "NetworkDevicePack",
    "version": "1.0.4",
    "enabled": false,
    "stream0": "onboarded_devices",
    "dashboard_type": "template",
    "template_variables": {
        "CUST_ID": {
            "contextId": "customerId"
        },
        "PROJ_ID": {
            "contextId": "project_id"
        },
        "CUST_TAG": {
            "contextId": "customerTag"
        }
    },
    "dashboard_filters": {
        "time_filter": true,
        "default_time_filter_labels": [
            "Last 1 month"
        ],
        "columns_filter": [],
        "group_filters": []
    },
    "dashboard_sections": [
        {
            "title": "Onboarded Devices",
            "show_filters": true,
            "widgets": [
                {
                    "title": "Discovery",
                    "widget_type": "tabular",
                    "stream": "discovery",
                    "stream0": "devices_to_discover",
                    "filter0": "customer_id = '{{CUST_ID}}' and project_id = '{{PROJ_ID}}'",
                    "extra_filter": "customer_tag is '{{CUST_TAG}}' or customer_tag is empty",
                    "refreshOptions": {
                        "refreshType": "Periodic",
                        "refreshInterval": 30000
                    },
                    "remote_searchable": true,
                    "remote_searchable_cols": [
                        "device_ip",
                        "discovery_scope"
                    ],
                    "ts_column": "timestamp",
                    "paginated": true,
                    "height": 10,
                    "min_wdith": 12,
                    "columns": {
                        "device_ip": {
                            "title": "IP Address",
                            "key": true
                        },
                        "discovery_scope": {
                            "title": "Discovery Scope",
                            "visible": true,
                            "key": true,
                            "htmlTemplateForRow": "{%raw%}<span class='badge' style='background-color: {{ row.discovery_status_color }}' > {{ row.discovery_scope }} </span>{%endraw%}"
                        },
                        "customer_tag": {
                            "title": "customer_tag",
                            "key": true,
                            "visible": false
                        },
                        "customer_id": {
                            "title": "customer_id",
                            "key": true,
                            "visible": false
                        },
                        "timestamp": {
                            "title": "Timestamp",
                            "type": "DATETIME"
                        },
                        "_RDA_Id": {
                            "title": "RDA ID",
                            "key": true,
                            "visible": false
                        }
                    },
                    "custom_columns": [
                        {
                            "id": "discovery_status_color",
                            "label": "Discovery Scope Color",
                            "key": false,
                            "visible": false,
                            "expr": "'#008000' if str(discovery_scope) in [ 'yes', 'True'] else '#FF0000'"
                        }
                    ],
                    "actions": [
