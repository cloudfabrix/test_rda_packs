                                                        {
                                                            "identifier": "yes",
                                                            "displayName": "Yes"
                                                        },
                                                        {
                                                            "identifier": "no",
                                                            "displayName": "No"
                                                        }
                                                    ],
                                                    "controlType": "RADIO_BUTTON"
                                                },
                                                {
                                                    "help": "customer_tag",
                                                    "dataType": "string",
