{
  "name": "device_syslog_from_alert",
  "description": "Device Syslog",
  "label": "Syslogs",
  "enabled": false,
  "dashboard_type": "template",
  "dashboard_folder": "MSP",
  "template_variables": {
    "CUST_ID": {
      "contextId": "customerId"
    },
    "PROJ_ID": {
      "contextId": "projectId"
    },
    "CUST_TAG": {
      "contextId": "customerTag"
    },
    "DEVICE": {
      "contextId": "a_asset_ip_address"
    },
    "DEVICE_IP": {
      "contextId": "device_ip"
    }
  },
  "stream": "syslog_udp_event_stream",
  "version": "23.9.6.1",
  "dashboard_filters": {
    "time_filter": true,
    "extra_filter": "(rda_gw_client_ip is '{{DEVICE_IP}}' or rda_gw_client_ip is '{{DEVICE}}')",
    "default_time_filter_labels": [
      "Last 1 month"
    ],
    "group_filters": [
      {
        "stream": "syslog_udp_event_stream",
        "title": "Severity",
        "duration_hours": 1080,
        "group_by": [
          "syslog_severity"
        ],
        "ts_column": "timestamp",
        "agg": "value_count",
        "column": "count_"
      },
      {
        "stream": "syslog_udp_event_stream",
        "title": "Urgency",
        "duration_hours": 1080,
        "group_by": [
          "urgency"
        ],
        "ts_column": "timestamp",
        "agg": "value_count",
        "column": "count_"
      },
      {
        "stream": "syslog_udp_event_stream",
        "title": "Impact",
        "duration_hours": 1080,
        "group_by": [
          "impact"
        ],
        "ts_column": "timestamp",
        "agg": "value_count",
        "column": "count_"
      }
    ],
    "columns_filter": [
      {
        "id": "cisco_code",
        "label": "Cisco Code",
        "type": "TEXT"
      },
      {
        "id": "log_message",
        "label": "Message",
        "type": "TEXT"
      },
      {
        "id": "short_description",
        "label": "Description",
        "type": "TEXT"
      },
      {
        "id": "syslog_severity",
        "label": "Severity",
        "type": "TEXT"
      },
      {
        "id": "impact",
        "label": "Impact",
        "type": "TEXT"
      },
      {
        "id": "urgency",
        "label": "Urgency",
        "type": "TEXT"
      },
      {
        "id": "rda_gw_client_ip",
        "label": "IP Address",
        "type": "TEXT"
      },
      {
        "id": "raw",
        "label": "Raw Event",
        "type": "TEXT"
      },
      {
        "id": "log_message",
        "label": "Message",
        "type": "TEXT"
      },
      {
        "id": "short_description",
        "label": "Description",
        "type": "TEXT"
      },
      {
        "id": "syslog_severity_num",
        "label": "Severity Number",
        "type": "DOUBLE"
      },
      {
        "id": "rda_stream",
        "label": "RDA Stream",
        "type": "TEXT"
      }
    ]
  },
  "dashboard_sections": [
    {
      "title": "Syslog",
      "show_filter": true,
      "widgets": [
        {
          "widget_type": "label",
          "max_width": 12,
          "height": 0.5,
          "min_width": 12,
          "label": "<div style='text-align:center;width:100%;'><h1><a style='text-decoration:none;color:#0066ff;' target='_blank'> Device Syslogs</a></h1></div>",
          "widget_id": "33317e49"
        },
        {
          "widget_type": "pie_chart",
          "title": "Syslogs by Severity",
          "stream": "syslog_udp_event_stream",
          "ts_column": "timestamp",
          "duration_hours": 1080,
          "column": "count_",
          "agg": "value_count",
          "group_by": [
            "syslog_severity"
          ],
          "style": {
            "color-map": {
              "ERROR": "#EF5350",
              "NOTICE": "#4DD0E1",
              "EMERGENCY": "#B71C1C",
              "INFORMATIONAL": "#03A9F4",
              "WARNING": "#FFD54F",
              "ALERT": "#FFA726",
              "CRITICAL": "#E53935",
              "DEBUG": "#BCAAA4"
            }
          },
          "min_width": 6,
          "height": 4,
          "max_width": 6,
          "widget_id": "71405983"
        },
        {
          "widget_type": "pie_chart",
          "title": "Syslogs by Hosts",
          "stream": "syslog_udp_event_stream",
          "ts_column": "timestamp",
          "duration_hours": 1080,
          "column": "count_",
          "agg": "value_count",
          "group_by": [
            "rda_gw_client_ip"
          ],
          "min_width": 6,
          "height": 4,
          "max_width": 6,
          "widget_id": "e18b64f1"
        },
        {
          "title": "Syslog Details",
          "widget_type": "tabular",
          "stream": "syslog_udp_event_stream",
          "duration_hours": 1080,
          "resizableColumns": false,
          "showRowSummary": false,
          "query": "*",
          "min_width": 12,
          "height": 8,
          "max_width": 12,
          "paginated": true,
          "max_rows": 50,
          "truncateColumns": [
            "raw"
          ],
          "remote_searchable": true,
          "remote_searchable_cols": [
            "rda_gw_client_ip",
            "syslog_severity",
            "rda_gw_ep_type",
            "site_code"
          ],
          "columns": {
            "rda_gw_client_ip": {
              "title": "IP Address",
              "type": "TEXT",
              "key": true
            },
            "raw": {
              "title": "Raw Event",
              "type": "TEXT",
              "key": true
            },
            "a_severity_color": {
              "title": "Sev_2",
              "type": "COLOR-MAP",
              "source-column": "syslog_severity",
              "color-map": {
                "ERROR": "#EF5350",
                "NOTICE": "#4DD0E1",
                "EMERGENCY": "#B71C1C",
                "INFORMATIONAL": "#03A9F4",
                "WARNING": "#FFD54F",
                "ALERT": "#FFA726",
                "CRITICAL": "#E53935",
                "DEBUG": "#BCAAA4"
              }
            },
            "syslog_severity": {
              "title": "Severity",
              "htmlTemplateForRow": "{%raw%}<span class='badge' style='background-color: {{ row.a_severity_color}}' > {{row.syslog_severity}} </span>{%endraw%}",
              "defaultWidth": 150
            },
            "rda_gw_ep_name": {
              "title": "Endpoint Name",
              "type": "TEXT",
              "visible": false
            },
            "rda_gw_ep_type": "Endpoint Type",
            "rda_stream": {
              "title": "RDA Stream",
              "type": "TEXT",
              "visible": false
            },
            "site_code": "Site Code",
            "stream": {
              "title": "Stream",
              "type": "TEXT",
              "visible": false
            },
            "syslog_severity_num": {
              "title": "Severity Number",
              "type": "DOUBLE"
            },
            "timestamp": {
              "title": "Timestamp",
              "type": "DATETIME"
            }
          },
          "widget_id": "d211804e"
        }
      ]
    }
  ]
}